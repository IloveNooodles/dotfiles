# Set terminal type
term = xterm-256color

# Set color scheme
theme = catppuccin-mocha

# Configure font settings
font-family = MesloLGM Nerd Font Mono
font-size = 16.0

# Define keybindings
keybind = ctrl+b>shift+|=new_split:right
keybind = ctrl+b>shift+-=new_split:down
keybind = ctrl+b>left=resize_split:left,10
keybind = ctrl+b>right=resize_split:right,10
keybind = ctrl+b>down=resize_split:down,10
keybind = ctrl+b>up=resize_split:up,10
keybind = cmd+shift>r=reload_config
keybind = cmd+shift>f=toggle_fullscreen

# Keyboard navigation
keybind = alt+left=text:\x1bb
keybind = alt+right=text:\x1bf
keybind = cmd+left=text:\x1bOH
keybind = cmd+right=text:\x1bOF
keybind = alt+shift+h=csi:1;D
keybind = alt+shift+l=csi:1;C 
