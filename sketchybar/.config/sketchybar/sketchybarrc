# This is a demo config to showcase some of the most important commands.
# It is meant to be changed and configured, as it is intentionally kept sparse.
# For a (much) more advanced configuration example see my dotfiles:
# https://github.com/FelixKratz/dotfiles

source "$CONFIG_DIR/plugins/colors.sh"
PLUGIN_DIR="$CONFIG_DIR/plugins"

##### Bar Appearance #####
# Configuring the general appearance of the bar.
# These are only some of the options available. For all options see:
# https://felixkratz.github.io/SketchyBar/config/bar
# If you are looking for other colors, see the color picker:
# https://felixkratz.github.io/SketchyBar/config/tricks#color-picker

sketchybar --bar position=top height=40 blur_radius=30 color=0x40$BAR_COLOR

##### Changing Defaults #####
# We now change some default values, which are applied to all further items.
# For a full list of all available item properties see:
# https://felixkratz.github.io/SketchyBar/config/items

default=(
  padding_left=3
  padding_right=3
  icon.font="Hack Nerd Font:Bold:12.0"
  label.font="Hack Nerd Font:Bold:11.0"
  icon.color=$WHITE
  label.color=$WHITE
  icon.padding_left=6
  icon.padding_right=6
  label.padding_left=6
  label.padding_right=6
  background.corner_radius=5
  background.height=24
  label.shadow=on
  label.shadow_color=0x80000000
  label.shadow_offset=1
  icon.shadow=on
  icon.shadow_color=0x80000000
  icon.shadow_offset=1
)
sketchybar --default "${default[@]}"

##### Adding Left Items #####
# We add some regular items to the left side of the bar, where
# only the properties deviating from the current defaults need to be set
sketchybar --add item apple left \
           --set apple icon= label.drawing=off icon.padding_right=10 \
           --add item front_app left \
            --set front_app icon.drawing=off label.font="Hack Nerd Font:Bold:12.0" script="$PLUGIN_DIR/front_app.sh"  \
           --subscribe front_app front_app_switched

##### aerospace #####
sketchybar --add event aerospace_workspace_change

for sid in $(aerospace list-workspaces --all); do
    sketchybar --add item space.$sid left \
        --subscribe space.$sid aerospace_workspace_change \
        --set space.$sid \
        background.color=0x44ffffff \
        background.corner_radius=5 \
        background.height=16 \
        background.drawing=off \
        label.color=$WHITE \
        label="$sid" \
        label.font="Hack Nerd Font:Bold:10.0" \
        label.padding_left=4 \
        label.padding_right=4 \
        icon.padding_left=0 \
        icon.padding_right=0 \
        padding_left=0 \
        padding_right=0 \
        padding_left=0 \
        padding_right=0 \
        click_script="aerospace workspace $sid" \
        script="$CONFIG_DIR/plugins/aerospace.sh $sid"
done


##### Spotify #####
sketchybar --add item music left \
           --set music \
             script="$PLUGIN_DIR/music.sh" \
             icon= \
             label.padding_left=0 \
             icon.padding_right=4 \
             label.color=$GREEN \
             icon.color=$GREEN \
             click_script="open -a Spotify" \
             update_freq=2 \
             drawing=on \    # start hidden
           --subscribe music media_change

##### Adding Right Items #####
sketchybar \
  --add item clock right \
    --set clock \
      update_freq=10 \
      icon= \
      script="$PLUGIN_DIR/clock.sh" \
      label.padding_left=4 \
      icon.padding_right=4 \
      label.color=$ORANGE \
      icon.color=$ORANGE \
  \
  --add item weather right \
    --set weather \
      script="$PLUGIN_DIR/weather.sh" \
      icon= \
      update_freq=300 \
      label.padding_left=0 \
      icon.padding_right=4 \
      label.color=$CYAN \
      icon.color=$CYAN \
      click_script="open -a Weather" \
      drawing=on \
  \
  --add item volume right \
    --set volume \
      script="$PLUGIN_DIR/volume.sh" \
      padding_right=4 \
      --subscribe volume volume_change \
  \
  --add item battery right \
    --set battery \
      update_freq=120 \
      script="$PLUGIN_DIR/battery.sh" \
      padding_right=4 \
      --subscribe battery system_woke power_source_change \
  \
  --add item disk right \
    --set disk \
    script="$PLUGIN_DIR/disk.sh" \
    icon= \
     update_freq=3 \
     label.padding_left=0 \
     icon.padding_right=8 \
    label.color=$PINK \
    icon.color=$PINK \
  \
  --add graph cpu_usage right 50 \
     --set cpu_usage script="$PLUGIN_DIR/cpu_usage.sh" \
      update_freq=5 \
      label.color=$PURPLE \
      graph.color=$PURPLE \
      graph.fill_color=0x55$MAUVE \
      graph.line_width=2 \
      icon.drawing=off

##### Force all scripts to run the first time (never do this in a script) #####
sketchybar --update
